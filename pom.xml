		</dependency>
		<dependency>
			<groupId>org.eclipse.swt</groupId>
			<artifactId>org.eclipse.e4.xwt.forms</artifactId>
			<version>0.9.1.SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.eclipse.swt</groupId>
			<artifactId>org.eclipse.e4.xwt</artifactId>
			<version>0.9.1.SNAPSHOT</version>
		</dependency>
		<dependency>
